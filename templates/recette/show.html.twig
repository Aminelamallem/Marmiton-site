{% extends 'base.html.twig' %}

{% block title %}Hello RecetteController!{% endblock %}

{% block body %}
<div class="container my-5 mb-5">
    <div class="row g-0">


      <div class="col-12 col-md-6 col-lg-4">
      
      <div- class="card mb-3 bg-light"width="400px" height="200">
            <img src="{{recettes.image}}" class="img-fluid rounded-start" alt="...">
          
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">{{recettes.titre}}</h5>
              <p class="card-text"><small class="text-body-secondary">{{recettes.duree}}</small></p>
              <p>{{recettes.difficulte}}</p>
            </div>
          </div>
        </div->

    


    </div>
</div>

<div class="container">
  {{form_start(form)}}
<button class="sumbit">Valider</button>
  {{form_end(form)}}
</div>

{% for item in recettes.commentaires %}
<p class="mt-3">
  <strong>{{app.user.username}}</strong>
  {{item.message}}
  {{item.createdAt|date('d/m/Y H:i:s')}}
</p>
  
{% endfor %}


{% endblock %}